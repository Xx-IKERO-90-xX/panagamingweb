{%extends 'base.jinja'%}

{%block title%} {{user['name']}} {%endblock%}

{%block content%}
<br>
{%if user['main'] != None%}
    <div class="min-h-screen flex items-center justify-center p-10">
        <div
            class="{{user['main']}} font-std mb-10 w-full rounded-2xl p-10 font-normal leading-relaxed text-gray-900 shadow-xl">
            <div class="flex flex-col md:flex-row">
                <div class="avatar_div md:w-1/3 text-center mb-8 md:mb-0 bg-black p-5">
                    <img src="{{user['avatar']}}" alt="Profile Picture"
                        class="rounded-full w-28 h-28 mx-auto mb-4 border-4 border-indigo-800 transition-transform duration-300 hover:scale-105 ring ring-gray-300">
                    <h1 class="text-2xl font-bold mb-2">{{user['name']}}</h1>
                </div>
                <div class="info_div md:w-2/3 md:pl-8 bg-black md:ml-10 p-5">
                    <br>
                    {% if user["mc_name"] != None %}
                    <strong>Minecraft: </strong>
                    <label class="text-gray-600 mb-6">{{user['mc_name']}}</label>
                    {%endif%}

                    <label style="text-align: left;" class="text-xl font-bold">Descripción</label>
                    <p class="mb-6">
                        {{user['descripcion']}}
                    </p>
                </div>
            </div>
        </div>
    </div>
{%else%}
    <div class="min-h-screen flex items-center justify-center p-10">
        <div
            class="green-b1 font-std mb-10 w-full rounded-2xl p-10 font-normal leading-relaxed text-gray-900 shadow-xl">
            <div class="flex flex-col md:flex-row">
                <div class="avatar_div md:w-1/3 text-center mb-8 md:mb-0 bg-black p-5">
                    <img src="{{user['avatar']}}" alt="Profile Picture"
                        class="rounded-full w-28 h-28 mx-auto mb-4 border-4 border-indigo-800 transition-transform duration-300 hover:scale-105 ring ring-gray-300">
                </div>
                <div class="info_div md:w-2/3 md:pl-8 bg-black md:ml-10 p-5">
                    <h1 class="text-2xl font-bold mb-2">{{user['name']}}</h1>
                    <br>
                    {% if user["mc_name"] != None %}
                    <strong>Minecraft: </strong>
                    <label class="text-gray-600 mb-6">{{user['mc_name']}}</label>
                    {%endif%}

                    <label style="text-align: left;" class="text-xl font-bold">Descripción</label>
                    <p class="mb-6">
                        {{user['descripcion']}}
                    </p>
                </div>
            </div>
        </div>
    </div>
{%endif%}
    <br><br>
    <br><br>
{%endblock%}