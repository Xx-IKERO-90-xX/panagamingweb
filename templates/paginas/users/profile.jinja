<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>{{name}}</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='../../../static/estilo/style.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='../../static/estilo/profileStyle.css'>
    <script src='main.js'></script>
    <style>
    </style>
</head>

<body>
    <header>
        <a href="{{url_for('Inicio')}}"><img alt=" " src="../../static/img/img_index/logo.png"></a>
    </header>
    <div class="usuarioSesion">
        <a style="text-decoration: none; color: white;" href="{{url_for('MiPerfil', id=session['id'])}}"><img
                src="{{session['imgUrl']}}"><br></a>
        <label>{{session['name']}}</label>
    </div>
    <main style="height: 100%;">
        <!--Menu principal-->
        <nav>
            <ul>
                <li><span><a href="{{url_for('comunidad')}}">COMUNIDAD</a></span></li>
                <li><span><a href="{{url_for('Inicio')}}">PRINCIPAL</a></span></li>
                <li><span><a href="{{url_for('soporte')}}">SOPORTE</a></span></li>
                <li><span><a href="{{url_for('cerrarSesion')}}">CERRAR SESION</a></span></li>
            </ul>
        </nav>
        <br><br><br><br>
        <br><br><br><br><br>
        {% if user['main'] != None %}
        <div id="profileGreen" class="{{user['main']}}">
            <br><br>
            <div class="profileAvatar">
                <br>
                <img src="{{user['avatar']}}">
                <br><br>
            </div>
            <br>
            <div class="profileDatos">
                <br><br>
                <div>
                    <label style="color: white;"><strong>Nombre:</strong> {{user["name"]}}</label>
                </div>
                <br><br>
                <div>
                    <label style="color: white;"><strong>Mote:</strong> {{user["mote"]}}</label><br>
                </div>
                <br><br>
                <div>
                    <label style="color: white;"><strong>Sobre mi:</strong></label>
                    <br><br><br>
                    <textarea id="textDescripcion" readonly>
                        {{user["descripcion"]}}
                    </textarea>
                    <br>
                </div><br>
            </div>
            <br><br>
        </div>
        <br><br><br><br>
        {% else %}
        <div id="profileGreen" class="profileDefault">
            <br><br>
            <div class="profileAvatar">
                <br>
                <img src="{{user['avatar']}}">
                <br><br>
            </div>
            <br>
            <div class="profileDatos">
                <br><br>
                <div>
                    <label style="color: white;"><strong>Nombre :</strong> {{user["name"]}}</label>
                </div>
                <br><br>
                <div>
                    <label style="color: white;"><strong>Mote: </strong> {{user["mote"]}}</label><br>
                </div>
                {% if user['minecraftName'] != none%}
                    <div>
                        <label style="color: white;"><strong>Minecraft: </strong> {{user['minecraftName']}} </label>
                    </div>
                {% endif %}
                <div>
                </div>
                <br><br>
                <div>
                    <label style="color: white;"><strong>Sobre mi:</strong></label>
                    <br><br><br>
                    <textarea id="textDescripcion" readonly>
                        {{user["descripcion"]}}
                    </textarea>
                    <br>
                </div><br>
            </div>
            <br><br>
        </div>
        <br><br><br><br>
        {% endif %}

    </main>
    <footer>


    </footer>
</body>

</html>