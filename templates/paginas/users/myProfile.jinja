{%extends 'base.jinja'%}

{%block title%} Mi Perfil {%endblock%}

{%block content%}
<link rel="stylesheet" type="text/css" href="/static/estilo/users/userStyle.css">
<div class="container">
    <br><br><br><br>
    {%if user['main'] != None%}
    <div class="min-h-screen flex items-center justify-center p-10">
        <div
            class=" {{user['main']}} font-std mb-10 w-full rounded-2xl p-10 font-normal leading-relaxed text-gray-900 shadow-xl">
            <div class="flex flex-col md:flex-row">
                <div class="avatar_div md:w-1/3 text-center mb-8 md:mb-0 bg-black p-5">
                    {%if user['avatar'] != None%}
                    <img src="/static/uploads/{{user['avatar']}}" alt="Profile Picture"
                        class="rounded-full w-28 h-28 mx-auto mb-4 border-4 border-indigo-800 transition-transform duration-300 hover:scale-105 ring ring-gray-300">
                    {%else%}
                    <img src="/static/img/userlog.jpg" alt="Profile Picture"
                        class="rounded-full w-28 h-28 mx-auto mb-4 border-4 border-indigo-800 transition-transform duration-300 hover:scale-105 ring ring-gray-300">
                    {%endif%}
                    <h1 class="text-2xl font-bold mb-2">{{user['name']}}</h1>
                    <a href="{{url_for('usuario.EditUserStyle', id=session['id'])}}"
                        class="btn btn-success"><strong>Estilo</strong></a>
                </div>
                <div class="info_div md:w-2/3 md:pl-8 bg-black md:ml-10 p-5">
                    <br>
                    {% if user["mc_name"] != None %}
                    <strong>Minecraft: </strong>
                    <label class="text-gray-600 mb-6">{{user['mc_name']}}</label>
                    {%endif%}
                    <label style="text-align: left;" class="text-xl font-bold">Descripción</label>
                    <button class="edit_description_button" onclick="modal_edit_description.showModal()">
                        <svg width="20" class="hover:bg-green-500 rounded" xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 512 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                            <path
                                d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160L0 416c0 53 43 96 96 96l256 0c53 0 96-43 96-96l0-96c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 96c0 17.7-14.3 32-32 32L96 448c-17.7 0-32-14.3-32-32l0-256c0-17.7 14.3-32 32-32l96 0c17.7 0 32-14.3 32-32s-14.3-32-32-32L96 64z" />
                        </svg>
                    </button>
                    <p class="mb-6">
                        {{user['descripcion']}}
                    </p>
                </div>
            </div>

        </div>
    </div>
    {%else%}
    <div class="min-h-screen flex items-center justify-center p-10">
        <div
            class="green-b1 font-std mb-10 w-full rounded-2xl p-10 font-normal leading-relaxed text-gray-900 shadow-xl">
            <div class="flex flex-col md:flex-row">
                <div class="avatar_div md:w-1/3 text-center mb-8 md:mb-0 bg-black p-5">
                    {%if user['avatar'] != None%}
                    <img src="/static/uploads/{{user['avatar']}}" alt="Profile Picture"
                        class="rounded-full w-28 h-28 mx-auto mb-4 border-4 border-indigo-800 transition-transform duration-300 hover:scale-105 ring ring-gray-300">
                    {%else%}
                    <img src="/static/img/userlog.jpg" alt="Profile Picture"
                        class="rounded-full w-28 h-28 mx-auto mb-4 border-4 border-indigo-800 transition-transform duration-300 hover:scale-105 ring ring-gray-300">
                    {%endif%}
                    <h1 class="text-2xl font-bold mb-2">{{user['name']}}</h1>
                    <a href="{{url_for('usuario.EditUserStyle', id=session['id'])}}"
                        class="btn btn-success"><strong>Estilo</strong></a>
                </div>
                <div class="info_div md:w-2/3 md:pl-8 bg-black md:ml-10 p-5">
                    <br>
                    {% if user["mc_name"] != None %}
                    <strong>Minecraft: </strong>
                    <label class="text-gray-600 mb-6">{{user['mc_name']}}</label>
                    {%endif%}

                    <label style="text-align: left;" class="text-xl font-bold">Descripción</label>
                    <button class="edit_description_button" onclick="modal_edit_description.showModal()">
                        <svg width="20" class="hover:bg-green-500 rounded" xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 512 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                            <path
                                d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160L0 416c0 53 43 96 96 96l256 0c53 0 96-43 96-96l0-96c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 96c0 17.7-14.3 32-32 32L96 448c-17.7 0-32-14.3-32-32l0-256c0-17.7 14.3-32 32-32l96 0c17.7 0 32-14.3 32-32s-14.3-32-32-32L96 64z" />
                        </svg>
                    </button>
                    <p class="mb-6">
                        {{user['descripcion']}}
                    </p>
                </div>
            </div>

        </div>
    </div>
    {%endif%}

    <br><br><br><br>

    <dialog id="modal_edit_description" class="modal shadow-red-500/50 p-4 rounded-lg">
        <div class="modal-box">
            <form method="post" action="{{url_for('usuario.edit_user_description')}}">
                <h3 class="text-lg font-bold">Descripción</h3>
                <textarea style="text-align: left;" name="description"
                    class="description_textarea textarea textarea-accent">{{user['descripcion']}}
                </textarea>
                <br><br>
                <button type="submit" class="btn btn-success">Editar</button>
            </form>
        </div>
    </dialog>


    <button class="btn" onclick="my_modal_3.showModal()">open modal</button>
    <dialog id="modal_avatar" class="modal">
        <div class="modal-box">
            <form method="dialog">
                <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
            </form>
            <h3 class="text-lg font-bold">Nuevo Avatar</h3>
            <form method="post" enctype="multipart/form-data">
                <input type="file" name="new_avatar" class="file-input file-input-success" />
            </form>
        </div>
    </dialog>

</div>
{%endblock%}