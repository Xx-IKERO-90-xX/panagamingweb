{%extends 'basemc.jinja'%}

{%block title%}Editar{%endblock%}

{%block content%}
<div class="container">
    <form class="manageForm" action="{{url_for('minecraft.EditarSectorPerdido', id=sectorPerdido['id'])}}" method="POST"
        enctype="multipart/form-data">
        <div class="form-group">
            <h2>Descripción</h2><br>
            <textarea name="descripcion">{{sectorPerdido['descripcion']}}</textarea>
        </div>
        <br><br>
        <div class="row">
            <div class="col col-6">
                <br>
                <div class="form-group">
                    <label>Imágen</label>
                    <br>
                    <input type="file" name="imagen" accept="image/png, image/jpeg, image/jpg" style="color: white;">
                </div>
                <br>
                <div class="form-group">
                    <div>
                        <label>Activo:</label>
                        {% if sectorPerdido['activo'] == 'true'%}
                        <select name="activo">
                            <option value="true" selected>✔️</option>
                            <option value="false">❌</option>
                        </select>
                        {% else %}
                        <select name="activo">
                            <option value="true">✔️</option>
                            <option value="false" selected>❌</option>
                        </select>
                        {% endif %}

                    </div>
                    <br>
                    <div>
                        <label>Planeta:</label>
                        {% if sectorPerdido['planeta'] == 'Fjordur' %}
                        <select name="planeta">
                            <option value="Fjordur" selected>Fjordur</option>
                            <option value="Betweenlands">Betweenlands</option>
                            <option value="Scorched">Scorched</option>
                        </select>
                        {% endif %}
                        {% if sectorPerdido['planeta'] == 'Betweenlands' %}
                        <select name="planeta">
                            <option value="Fjordur">Fjordur</option>
                            <option value="Betweenlands" selected>Betweenlands</option>
                            <option value="Scorched">Scorched</option>
                        </select>
                        {% endif %}
                        {% if sectorPerdido['planeta'] == 'Scorched' %}
                        <select name="planeta">
                            <option value="Fjordur">Fjordur</option>
                            <option value="Betweenlands">Betweenlands</option>
                            <option value="Scorched" selected>Scorched</option>
                        </select>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col col-6 coordenadas">
                <h2>Coordenadas</h2>
                <br>
                <div>
                    <label>Cord X</label>
                    <input type="number" name="cord_x" value="{{sectorPerdido['cord_x']}}">
                </div><br>
                <div>
                    <label>Cord Y</label>
                    <input type="number" name="cord_y" value="{{sectorPerdido['cord_y']}}">
                </div><br>
                <div>
                    <label>Cord Z</label>
                    <input type="number" name="cord_z" value="{{sectorPerdido['cord_z']}}">
                </div>
            </div>
        </div>
        <br><br>
        <button type="submit" class="btn_table">Editar</button>
        <a href="{{url_for('minecraft.GestionarSectoresPerdidos')}}" class="btn_table">Volver</a>
    </form>
</div>
{%endblock%}