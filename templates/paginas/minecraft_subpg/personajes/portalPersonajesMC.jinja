            <h2 style="font-family: mine_tit2; color: black;">{{personaje["name"]}}</h2>
            <br><br>
            {% if personaje['imgUrl'] != 'None'%}
            <img alt=" " src='../../../../static/uploads/{{personaje["imgUrl"]}}'>
            {% else %}
            <img alt=" " src="../../../../static/img/noImage.jpg">
            {% endif %}
            <br><br>
            <p>
                {{personaje["descripcion"]}}
            </p><br>
            <br><br>
            <a href="{{url_for('VerInfoPersonaje', idPersonaje=personaje['id'])}}" class="greenButton">Detalles</a>
