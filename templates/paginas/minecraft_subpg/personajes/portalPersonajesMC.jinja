{%extends 'basemc.jinja'%}

{%block title%} Personajes {%endblock%}

{%block content%}
<div class="portadaPersonajes">
    <img src="../../../../static/img/img_mc/personajesPortada.jpg">
</div>
<nav class="personajeNav">
    <div style="text-align: center;" class="personajeNavElements">
        <a class="btn btn-success" style="height: 40px;" href="{{url_for('new_character')}}">CREAR PERSONAJE</a>
    </div>
</nav>
