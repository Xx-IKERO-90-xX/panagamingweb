                    {% endif %}
                    <br><br><br><br>
                </div>
                {%endif%}
                {%if personaje["color"] == 'red'%}
                <div style="background: red; border-radius: 10px;" class="diarioPortada">
                    <br><br>
                    <h3 style="font-family: neometra; color: black; font-size: 30px;"><strong>DIARIO DE {{personaje["name"]}}</strong></h3>
                    <br><br>
                    {% if personaje['imgUrl'] == 'None' %}
                        <img alt=" " src="../../../../static/img/userlog.jpg" width="150">
                    {% else %}
                        <img class="" alt=" " src='../../../../static/uploads/{{personaje["imgUrl"]}}' width="150">
                    {% endif %}
                    <br><br><br><br>
                </div>
                {%endif%}
                {%if personaje["color"] == 'yellow'%}
                <div style="background: yellow; border-radius: 10px; font-size: 30px;" class="diarioPortada">
                    <br><br>
                    <h3 style="font-family: neometra; color: black;"><strong>DIARIO DE {{personaje["name"]}}</strong></h3>
                    <br><br>
                    {% if personaje['imgUrl'] == 'None' %}
                        <img alt=" " src="../../../../static/img/userlog.jpg" width="150">
                    {% else %}
