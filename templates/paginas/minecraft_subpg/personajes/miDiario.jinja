                    {% endif %}
                    <br><br><br><br>
                </div>
                {%endif%}
                {%if personaje["color"] == 'purple'%}
                <div style="background: purple; border-radius: 10px;" class="diarioPortada">
                    <br><br>
                    <h3 style="font-family: neometra; color: black; font-size: 30px;"><strong>DIARIO DE {{personaje["name"]}}</strong></h3>
                    <br><br>
                    {% if personaje['imgUrl'] == 'None' %}
                        <img alt=" " src="../../../../static/img/userlog.jpg" width="150">
                    {% else %}
                        <img class="" alt=" " src='../../../../static/uploads/{{personaje["imgUrl"]}}' width="150">
                    {% endif %}
                    <br><br><br><br>
                </div>
                {%endif%}
            </div>
            {%for pagina in paginas%}
                <div width="50" class="carousel-item">
                    <form class="pagina" method="post" action="{{url_for('EditarPagina', idPersonaje=idPersonaje)}}">
                        {%if personaje['contenido'] == None%}
                            <textarea id="contenido" name="contenido"></textarea>
                        {%else%}
                            <textarea id="contenido" name="contenido">{{pagina["contenido"]}}</textarea>
                        {%endif%}
                        <br><br>
                        <input type="text" name="idPagina" value="{{pagina['idPagina']}}" style="display: none;">
                        <button type="submit" class="btn btn-primary"><strong>Editar</strong></button>
                        <a href="{{url_for('DeletePage', idPagina=pagina['idPagina'])}}" class="btn btn-danger"><strong>Eliminar</strong></a>                                                                       
                    </form>
                </div>
            {%endfor%}                       
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
        </div>
        <script>
            $('.carousel').carousel({
                interval: 0
            })
        </script>
    </main>
    <footer></footer>
</body>
</html>