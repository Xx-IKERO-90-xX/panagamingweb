<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Personajes de MinecraftPG</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='../../../../static/estilo/style.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='../../../../static/estilo/stylePersonajes.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src='../../../../static/scripts/main.js'></script>
    <style>
        .on {
            display: block;
        }
        #dOpts {
            margin-top: 40px;
            background: rgb(29, 29, 29);
        }
        #dOpts a {
            background: black;
            color: white;
        }
    </style>
</head>
<body>
    <header>
        <a href="{{url_for('Inicio')}}"><img alt=" " src="../../../../static/img/img_index/logo.png"></a>
    </header>
    <div class="usuarioSesion">
        <a style="text-decoration: none; color: white;" href="{{url_for('MiPerfil', id=session['id'])}}"><img src="{{session['imgUrl']}}"><br></a>
        <label>{{session['name']}}</label>
    </div> 
    <nav>
        <ul>
            <li><span><a style="color: white;" href="{{url_for('comunidad')}}">COMUNIDAD</a></span></li>
            <li><span><a style="color: white;" href="{{url_for('Inicio')}}">PRINCIPAL</a></span></li>
            <li><span><a style="color: white;" href="{{url_for('soporte')}}">SOPORTE</a></span></li>
            <li><span><a style="color: white;" href="{{url_for('cerrarSesion')}}">CERRAR SESION</a></span></li>
        </ul>
    </nav><br>
    <main>
        <div class="portadaPersonajes">
            <img src="../../../../static/img/img_mc/personajesPortada.jpg">
        </div>
        <nav class="personajeNav">
            <a class="btn btn-success" style="color:white; height: 40px;" href="{{url_for('FormEditPersonaje')}}"><strong>Editar Personaje</strong></a>
            <a class="btn btn-success" style="color: white; height: 40px;" href="{{url_for('MiDiario')}}"><strong>Diario</strong></a>
        </nav>
        <div class="personajeSections">
            <div class="listaPersonajes">
                <br><br><br>
                <br><br><br>
                <br><br><br>
                <h2 style="font-family: mine_tit2; color: black;">PERSONAJES CLASIFICADOS</h2>
                <br><br><br><br>
                <br><br>
                {%for personaje in listaPersonajes%}
                {%if personaje["color"] == 'green'%}
                <div class="personaje_green">
                    <h2 style="font-family: mine_tit2; color: black;">{{personaje["name"]}}</h2>
                    <br><br>
                    <img alt=" " src='{{personaje["imgUrl"]}}'>
                    <br><br>
                    <p>
                        {{personaje["descripcion"]}}
                    </p><br>
                    <br><br>
                    <a href="{{url_for('VerInfoPersonaje', idPersonaje=personaje['id'])}}" class="greenButton">Detalles</a>
                    <br><br>
                </div>
                <br><br><br><br>
                {%endif%}
                {%if personaje["color"] == 'blue'%}
                <div class="personaje_blue">
                    <h2 style="font-family: mine_tit2: color: black;">{{personaje["name"]}}</h2>
                    <br><br>
                    <img alt=" " src='{{personaje["imgUrl"]}}'>
                    <br><br>
                    <p>
                        {{personaje["descripcion"]}}
                    </p><br>
                    <br><br>
                    <a href="{{url_for('VerInfoPersonaje', idPersonaje=personaje['id'])}}" class="buttonBlue">Detalles</a>
                    <br><br>
                </div>
                <br><br><br><br>
                {%endif%}
                {%if personaje["color"] == 'red'%}
                <div class="personaje_red">
                    <h2 style="font-family: mine_tit2: color: black;">{{personaje["name"]}}</h2>
                    <br><br>
                    <img alt=" " src='{{personaje["imgUrl"]}}'>
                    <br><br>
                    <p>
                        {{personaje["descripcion"]}}
                    </p><br>
                    <br><br>
                    <a href="{{url_for('VerInfoPersonaje', idPersonaje=personaje['id'])}}" class="buttonRed">Detalles</a>
                    <br><br>
                </div>
                <br><br><br><br>
                {%endif%}
                {%if personaje["color"] == 'yellow'%}
                <div class="personaje_yellow">
                    <h2 style="font-family: mine_tit2; color: black;">{{personaje["name"]}}</h2>
                    <br><br>
                    <img alt=" " src='{{personaje["imgUrl"]}}'>
                    <br><br>
                    <p>
                        {{personaje["descripcion"]}}
                    </p><br>
                    <br><br>
                    <a href="{{url_for('VerInfoPersonaje', idPersonaje=personaje['id'])}}" class="buttonYellow">Detalles</a>
                    <br><br>
                </div>
                <br><br><br><br>            
                {%endif%}
                {%if personaje["color"] == 'pink'%}
                <div class="personaje_pink">
                    <h2 style="font-family: mine_tit2; color: black;">{{personaje["name"]}}</h2>
                    <br><br>
                    <img alt=" " src='{{personaje["imgUrl"]}}'>
                    <br><br>
                    <p>
                        {{personaje["descripcion"]}}
                    </p><br>
                    <br><br>
                    <a href="{{url_for('VerInfoPersonaje', idPersonaje=personaje['id'])}}" class="buttonPink">Detalles</a>
                    <br><br>
                </div>
                <br><br><br><br>            
                {%endif%}
                {%if personaje["color"] == 'purple'%}
                <div class="personaje_purple">
                    <h2 style="font-family: mine_tit2; color: black;">{{personaje["name"]}}</h2>
                    <br><br>
                    <img alt=" " src='{{personaje["imgUrl"]}}'>
                    <br><br>
                    <p>
                        {{personaje["descripcion"]}}
                    </p><br>
                    <br><br>
                    <a href="{{url_for('VerInfoPersonaje', idPersonaje=personaje['id'])}}" class="buttonPurple">Detalles</a>
                    <br><br>
                </div>
                <br><br><br><br>            
                {%endif%}
                {%endfor%}
            </div>      
        </div>
    </main>
    <footer>
        
    </footer>
</body>
</html>