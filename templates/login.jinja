{%extends 'base.jinja'%}

{%block title%}Iniciar Sesion{%endblock%}

{%block content%}

<style>
    .errors {
        text-align: center;
        color: rgb(0, 0, 0);
        font-weight: bold;
        font-family: Arial;
        background: rgb(255, 54, 54);
        border-radius: 20px;
        padding: 10px;
        margin-top: 20px;
        font-size: 20px;
    }

    .loginForm {
        width: 400px;
        margin: auto;
        text-align: center;
        margin-top: 100px;
        font-family: Arial;
        background: rgb(22, 22, 22);
        background: linear-gradient(90deg, rgba(22, 22, 22, 1) 10%, rgba(79, 79, 79, 1) 50%, rgba(22, 22, 22, 1) 90%);
        padding: 40px;
        color: white;
        border-radius: 10px;
        border: solid 0.2em;
        border-color: rgb(0, 207, 0);
    }

    .loginForm img {
        border-radius: 50%;
        width: 160px;
    }

    .formContent {
        font-size: 25px;
        margin-bottom: 30px;
        color: white;
    }

    .formContent input {
        width: 280px;
        border-radius: 20px;
        border-color: rgb(0, 199, 0);
        font-family: Arial;
        font-size: 20px;
        color: black;
        text-align: center;
    }

    .formButtons input {
        padding: 5px;
        margin: 10px;
        color: black;
        background: black;
        border-color: green;
        font-weight: bold;
    }

    .formButtons input:hover {
        background: rgb(0, 41, 0);
    }
</style>
<br><br><br>
<div class="container" style="height: 100vh;">
    <br>
    {%if errorMsg != null%}
    <div role="alert" class="alert alert-error">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>{{ errorMsg }}</span>
    </div>
    {%endif%}
    <form action="{{url_for('auth.login')}}" class="loginForm" method="post">
        <img class="mx-auto" src="/static/img/img_index/logo.png">
        <br><br>
        <div class="formContent">
            <label><strong>Nombre de Usuario </strong><br><input type="text" name="username" required></label><br>
            <br>
            <label><strong>Contrase√±a </strong><br><input type="password" name="passwd" required></label><br>
        </div>
        <div class="formButtons">
            <button type="submit"
                class="text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 shadow-lg shadow-green-500/50 dark:shadow-lg dark:shadow-green-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                <strong>Iniciar Sesion</strong>
            </button>
        </div>
    </form>
</div>
<br><br>

{%endblock%}