{%extends 'base.jinja'%}

{%block title%} Iniciar Sesion{%endblock%}

{%block content%}

<style>
    .errors {
        text-align: center;
        color: rgb(0, 0, 0);
        font-weight: bold;
        font-family: Arial;
        background: rgb(255, 54, 54);
        margin-left: 10%;
        margin-right: 10%;
        border-radius: 20px;
        width: 80%;
        padding: 10px;
        margin-top: 20px;
        font-size: 20px;
    }

    .loginForm {
        margin-left: 20%;
        margin-right: 20%;
        width: 60%;
        text-align: center;
        margin-top: 200px;
        font-family: Arial;
        background: black;
        padding: 40px;
        color: white;
        border-radius: 10px;
        border: solid 0.2em;
        border-color: rgb(0, 207, 0);
    }

    .formContent {
        font-size: 25px;
        margin-bottom: 30px;
        color: white;
    }

    .formContent input {
        width: 280px;
        padding: 5px;
        border-radius: 20px;
        border-color: rgb(0, 199, 0);
        font-family: Arial;
    }

    .formButtons input {
        padding: 5px;
        margin: 10px;
        background: black;
        color: white;
        border-color: green;
        font-weight: bold;
    }

    .formButtons input:hover {
        background: rgb(0, 41, 0);
    }
</style>

{%if errorMsg != null%}
<div class="errors" role="alert">
    {{ errorMsg }}
</div>
{%endif%}

<div class="container">
    <form action="{{url_for('IniciarSesion')}}" class="loginForm" method="post">
        <div class="formContent">
            <label><strong>Nombre de Usuario: </strong><br><input type="text" name="dName"></label><br>
            <br>
            <label><strong>Contrase√±a: </strong><br><input type="password" name="passwd"></label><br>
        </div>
        <div class="formButtons">
            <input type="submit" value="Iniciar Sesion">
            <input type="reset" value="Resetear">
        </div>
    </form>
</div>
{%endblock%}