        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.22/dist/full.min.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <header>
        <div style="background-image: url(/static/img/fondoverde.jpg);" class="navbar shadow-sm border-b-2 border-gray-950">
            <div class="flex-1">
                <a class="text-xl" href="{{url_for('index.index')}}">
                    <img class="pgLogo" src="/static/img/img_index/logo.png">
                </a>
            </div>
            {%if session%}
            <div class="flex-none">
                <ul class="menu menu-horizontal">
                    <li><a href="{{url_for('index.index')}}"><strong>Inicio</strong></a></li>
                    <li><a href="{{url_for('minecraft.index')}}"><strong>Minecraft</strong></a></li>
                </ul>
            </div>
            <div class="flex gap-2">
                <div class="dropdown dropdown-end">

                    <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
                        <div class="w-10 rounded-full">
                            <img src="{{session['imgUrl']}}" />
                        </div>
                    </div>
                    <ul tabindex="0"
                        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow">
                        <li>
                            <a href="{{url_for('usuario.my_profile')}}" class="justify-between">
                                <strong>Perfil</strong>
                            </a>
                        </li>
                        <li><a href="{{url_for('auth.logout')}}"><strong>Cerrar Sesión</strong></a></li>
                    </ul>
                </div>
            </div>
            {%else%}
            <div class="flex-none">
                <ul class="menu menu-horizontal">
                    <li><a href="{{url_for('auth.login')}}"><strong>Iniciar Sesión</strong></a></li>
                    <li><a href="{{url_for('auth.register')}}"><strong>Registrarse</strong></a></li>
                </ul>
            </div>
            {%endif%}
        </div>
    </header>
    <main class="h-dvh h-full">
        {%block content%} {%endblock%}
    </main>
    <footer class="footer footer-center bg-base-200 text-base-content rounded p-10">
        <div class="grid grid-flow-col gap-4">
            <a class="link link-hover">About us</a>
            <a class="link link-hover">Contact</a>
            <a class="link link-hover">Jobs</a>
            <a class="link link-hover">Press kit</a>
        </div>
        <div>
            <div class="grid grid-flow-col gap-4">
                <a>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                        class="fill-current">
